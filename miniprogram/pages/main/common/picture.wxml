<view class="girls-list-wrap">
  <view class='girls-list clearfix' id="J_GirlsList">
    <view class='item item-{{index}}' wx:for="{{group}}" wx:key="*this.src">
      <view class='a'>
        <view class='item-wrap'>
          <view class='img'>
            <image src='{{item.show? item.src : item.def}}' class='{{item.show? "active" : ""}}'></image>
          </view>
          <view class='info'>
            <view class="info">
              <text class="name">朱琳</text>
              <text class="city">杭州市</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>